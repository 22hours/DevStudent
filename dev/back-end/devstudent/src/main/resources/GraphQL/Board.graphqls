type Board{
    _id : String
    title : String
    author : String
    tags : [String]
    date : String
    content : String
    answerCount : Int
    views : Int
    solved : Boolean
    comments : [Comment]!
    answers : [Answer]!
}


# Root
type Query{
    findAllBoards : [Board]!
    findTopBy_id(_id:String) : Board
}

# Root
type Mutation{
    createBoard(title : String, author : String, tags : [String], date : String, content : String) : Board
    deleteBoard(_id : String) : Board
}